   <div class="container my-5">
    <% if (currencies) { %>

      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Currency</th>
            <th scope="col">Price in terms of USD</th>
            <th scope="col">Type</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row">1</th>
            <td><%= currencies.rates.btc.name %></td>
            <td><%= currencies.rates.usd.value/currencies.rates.btc.value%></td>
            <td><%= currencies.rates.btc.type %></td>
          </tr>
          <tr>
            <th scope="row">2</th>
            <td><%= currencies.rates.eth.name %></td>
            <td><%= currencies.rates.usd.value/currencies.rates.eth.value%></td>
            <td><%= currencies.rates.eth.type %></td>
          </tr>
          <tr>
            <th scope="row">3</th>
            <td><%= currencies.rates.ltc.name %></td>
            <td><%= currencies.rates.usd.value/currencies.rates.ltc.value%></td>
            <td><%= currencies.rates.ltc.type %></td>
          </tr>
          <tr>
            <th scope="row">4</th>
            <td><%= currencies.rates.xrp.name %></td>
            <td><%= currencies.rates.usd.value/currencies.rates.xrp.value%></td>
            <td><%= currencies.rates.xrp.type %></td>
          </tr>
          <tr>
            <th scope="row">5</th>
            <td><%= currencies.rates.usd.name %></td>
            <td><%= currencies.rates.usd.value/currencies.rates.usd.value%></td>
            <td><%= currencies.rates.usd.type %></td>
          </tr>
          <tr>
            <th scope="row">6</th>
            <td><%= currencies.rates.eur.name %></td>
            <td><%= currencies.rates.usd.value/currencies.rates.eur.value%></td>
            <td><%= currencies.rates.eur.type %></td>
          </tr>
          <tr>
            <th scope="row">7</th>
            <td><%= currencies.rates.pkr.name %></td>
            <td><%= currencies.rates.usd.value/currencies.rates.pkr.value%></td>
            <td><%= currencies.rates.pkr.type %></td>
          </tr>
          <tr>
            <th scope="row">8</th>
            <td><%= currencies.rates.cad.name %></td>
            <td><%= currencies.rates.usd.value/currencies.rates.cad.value%></td>
            <td><%= currencies.rates.cad.type %></td>
          </tr>
          <tr>
            <th scope="row">9</th>
            <td><%= currencies.rates.jpy.name %></td>
            <td><%= currencies.rates.usd.value/currencies.rates.jpy.value%></td>
            <td><%= currencies.rates.jpy.type %></td>
          </tr>
          <tr>
            <th scope="row">10</th>
            <td><%= currencies.rates.kwd.name %></td>
            <td><%= currencies.rates.usd.value/currencies.rates.kwd.value%></td>
            <td><%= currencies.rates.kwd.type %></td>
          </tr>
          
        </tbody>
      </table>
    
    <% } %>
   </div>
      
